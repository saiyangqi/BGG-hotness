<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bgg_hotness">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".hotness.HotnessActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".details.GameDetailsActivity"
            android:label="@string/title_activity_game_details"
            android:theme="@style/AppTheme"
            android:parentActivityName=".hotness.HotnessActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".hotness.HotnessActivity"/>
        </activity>
    </application>

</manifest>